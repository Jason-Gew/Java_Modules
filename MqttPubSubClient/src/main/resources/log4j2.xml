<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="3600">
    <Properties>
        <Property name="log-path">logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%t] %c{1}: %msg%n</Pattern>
            </PatternLayout>
        </Console>

        <RollingFile name="Rolling-File" fileName="${log-path}/client.log"
                     filePattern="${log-path}/client-%d{yyyy-MM-dd}_(%i).log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%t] %c{1} : %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

                <RollingFile name="Rolling-Message" fileName="${log-path}/mqtt.log"
                     filePattern="${log-path}/mqtt-%d{yyyy-MM-dd}_(%i).log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%t] (%c{1}): %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

        <File name="File-Appender" fileName="${log-path}/Paho-Client.log" >
            <PatternLayout>
                <pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %c{1} [%t] [%-5level] : %msg%n
                </pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>
        <Logger name="gew.PubSub" level="info" additivity="false">
            <AppenderRef ref="Rolling-File"/>
            <AppenderRef ref="Console-Appender"/>
        </Logger>

        <!-- MQTT Message Independent Rolling Log File -->
        <Logger name="gew.PubSub.mqtt.ClientCallback" level="info" additivity="false">
            <AppenderRef ref="Rolling-Message"/>
            <AppenderRef ref="Console-Appender"/>
        </Logger>

        <!-- MQTT Message Independent Rolling Log File -->
        <Logger name="gew.PubSub.entity.DataReceiving" level="info" additivity="false">
            <AppenderRef ref="Rolling-Message"/>
            <AppenderRef ref="Console-Appender"/>
        </Logger>

        <Logger name="org.eclipse.paho.client.mqttv3" level="info" additivity="false">
            <AppenderRef ref="File-Appender"/>
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console-Appender"/>
        </Root>
    </Loggers>
</Configuration>